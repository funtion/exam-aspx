<!doctype html>
@{
    Layout = "";
    ViewBag.Title = "首页";
}

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>Login</title>
    <link type="text/css" href="~/Content/css/login.css" rel="stylesheet" />
   

    <script type="text/javascript" src="~/Content/js/jquery-1.3.2.min.js"></script>
    <script type="text/javascript" src="~/Content/js/easyTooltip.js"></script>
    <script type="text/javascript" src="~/Content/js/jquery-ui-1.7.2.custom.min.js"></script>
</head>
<body>
    <div id="container">
        <div class="logo">
            <a href="#"><img src="~/Content/assets/logo.png" alt="" /></a>
        </div>
        <div id="box">
            <form action="/Index/Login" method="POST">
                <p class="main">
                    <label>Username: </label>
                    <input name="sid" placeholder="username" />
                    <label>Password: </label>
                    <input type="password" name="password" placeholder="password">
                </p>
                <p class="space">
                    <span><input type="checkbox" name="rememberme" />Remember me</span>
                    <input type="submit" value="Login" class="login" />
                    <input type="button" value="register" class="login" onclick="window.open('/Index/Register/')" />
                </p>
            </form>
        </div>
        @{
            if (ViewBag.login_failed != null)
            {
                <script>(function () { alert("用户名或密码错误！") })()</script>
            }
        }
    </div>

</body>
</html>





