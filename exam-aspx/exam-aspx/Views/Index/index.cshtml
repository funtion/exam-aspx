@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "首页";
}
<div class="container">
    <div class="row">
        <div class="col-md-6"></div>
        <div class="col-md-3">
            <h1 style="text-align:center">学生登陆</h1>
            <form action="/Index/Login" method="post">
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">学号</span>
                        <input type="text" class="form-control" placeholder="学号" name="sid">
                    </div>
                </div>
                <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-addon">密码</span>
                            <input type="password" class="form-control" placeholder="密码" name="password">
                        </div>
                    </div>
               
                <div class="form-group">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <button type="submit" class="btn btn-default">登陆</button>
                        </div>
                        <div class="btn-group">
                            <button type="button" class="btn btn-default" onclick="window.location='/Index/Register'">注册</button>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="btn-group btn-group-justified">
                        <div class="btn-group">
                            <button type="button" class="btn btn-info">管理入口</button>
                        </div>
                        
                    </div>
                </div>
            </form>
            @{
                if (ViewBag.login_failed != null)
                {
                    <div class="alert alert-danger" role="alert">用户名或密码错误</div>
                }
            }
        </div>
        <div class="col-md-3"></div>
</div>
    
</div>



