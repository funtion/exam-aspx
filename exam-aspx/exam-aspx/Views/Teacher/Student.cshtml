	"sFirst" : "First",
	"sLast" : "Last",
	"sNext" : "Next",
	"sPrevious" : "Pre "
}
}//用于设置提示文本

});
oTable.css("font-size","12px");//设置文本的样式；
})
</script>
<script>
    function delStudent(id) {
        $.post("delStudent",
                "id="+id,
                success = function (data) {
                    if (data.status == "success") {
                        alert("delete success!");
                        location.reload();
                    }
                    else {
                        alert("delete failed!" + data.error);
                        location.reload();
                    }
            })
    }
</script>
<script>
    function limitUser() {
        var sid = $("input#sid").val();
        if (sid != '') {
            $.post("AddLimitUser",
                   "sid="+sid,
                   success = function (data) {
                       if (data.status == "success") {
                           alert("add success!");
                           location.reload();
                       }
                       else {
                           alert("add failed!" + data.error);
                           location.reload();

                       }
                   })

            
        }
    }
</script>
