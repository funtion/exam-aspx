<div class="container">

    <div class="row">
        <div class="col-md-12">
            <div class="Product">
                <table id="product_info">
                    <thead>
                        <tr>
                            <th>一卡通</th>
                            <th>用户名</th>
                            <th>密码</th>
                            <th>
                                
                                <a class="btn btn-info" data-toggle="modal"
                                   data-target="#myModal">
                                    添加可注册账号
                                    <i class="halflings-icon white edit"></i>
                                </a>             
                                <a class="btn btn-info" href="LimitUser">
                                    查看可注册账号
                                    <i class="halflings-icon white edit"></i>
                                </a>             
                            </th>
                            
                               
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in ViewBag.studentList)
                        {
                            <tr>
                                <td class="center">@student.sid</td>
                                <td class="center">@student.name</td>
                                <td class="center">@student.password    </td>
                                <td>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>

<!-- 模态框（Modal） -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    添加可注册账号
                </h4>
            </div>
            <div class="modal-body">
                <label>学号</label>
                <input type="text" id="sid" name="sid"/>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default"
                        data-dismiss="modal">
                    关闭
                </button>
                <button type="button" class="btn btn-primary" onclick="limitUser()">
                    提交
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<!-- script for datatable -->
